          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Button fx:id="config" mnemonicParsing="false" onMouseClicked="#goToConfiguracion" text="Configuraciones" GridPane.columnIndex="1" />
            <Button fx:id="newGame" mnemonicParsing="false" onMouseClicked="#goToJuego" text="Nuevo Juego" GridPane.columnIndex="1" GridPane.rowIndex="1" />
